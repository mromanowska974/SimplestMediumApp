<Window x:Class="MyLoginPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyLoginPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="263*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_goToLogin" Content="Mam już konto" HorizontalAlignment="Left" Margin="20,156,0,0" VerticalAlignment="Top" Click="goToLoginWindow" Grid.Column="1"/>
        <Button x:Name="btn_goToRegister" Content="Chcę założyć konto" HorizontalAlignment="Left" Margin="118,156,0,0" VerticalAlignment="Top" Click="goToRegisterWindow" Grid.Column="1"/>
        <Label Content="Witaj w serwisie SimplestMedium" HorizontalAlignment="Left" Margin="29,47,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Masz już konto czy chcesz założyć nowe?" HorizontalAlignment="Left" Margin="8,94,0,0" VerticalAlignment="Top" Grid.Column="1"/>

    </Grid>
</Window>
